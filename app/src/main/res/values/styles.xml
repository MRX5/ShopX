<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Category_Name_Style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
    </style>

    <style name="search_view_style" parent="Widget.AppCompat.SearchView">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="iconifiedByDefault">false</item>
        <item name="queryHint">@string/search_products</item>
        <item name="queryBackground">@android:color/transparent</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>

    <style name="ToolbarColoredWhiteArrow" parent="Theme.ShopX">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

</resources>